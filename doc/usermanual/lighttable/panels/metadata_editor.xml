<!DOCTYPE sect2 [
		<!ENTITY % darktable_ent SYSTEM "../../darktable.ent">
		%darktable_ent;
]>

<sect2
    version="5.0"
    xmlns="http://docbook.org/ns/docbook" 
    xmlns:xi="http://www.w3.org/2001/XInclude" 
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xml:lang="en"
    status="final"
    xml:id="metadata_editor">

  <title>Metadata editor</title>

  <indexterm>
    <primary>lighttable panels</primary>
    <secondary>metadata editor</secondary>
  </indexterm>

  <indexterm>
    <primary>metadata editor</primary>
  </indexterm>

  <informaltable frame="none">
    <tgroup cols="2" colsep="0" rowsep="0">
      <colspec colwidth="6*"/>
      <colspec colwidth="4*"/>
      <tbody>
        <row>
          <entry>
            Edit metadata of an image, like <emphasis>title</emphasis>,
            <emphasis>description</emphasis>, <emphasis>creator</emphasis>,
            <emphasis>publisher</emphasis>, or <emphasis>rights</emphasis>. You can define your
            own presets if you want to apply specific settings frequently.
          </entry>
          <entry>
            <mediaobject>
	      <imageobject>
		<imagedata fileref="lighttable/images/panel_metadata_editor.png" scalefit="1" width="80%" align="center" />
	      </imageobject>
	    </mediaobject>
          </entry>
        </row>
      </tbody>
    </tgroup>
  </informaltable>

  <sect3 xml:id="metadata_editor_usage">

    <title>Usage</title>

    <sect4 xml:id="metadata_editor_usage_clear">

      <title>clear</title>

      <para>
        Delete existing metadata from the selected image(s).
      </para>

    </sect4>

    <sect4 xml:id="metadata_editor_usage_apply">

      <title>apply</title>

      <para>
        Apply new settings, as defined in the fields above, to the selected image(s).
      </para>

    </sect4>

  </sect3>

</sect2>
