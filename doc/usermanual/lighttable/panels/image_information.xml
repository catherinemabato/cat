<!DOCTYPE sect2 [
		<!ENTITY % darktable_ent SYSTEM "../../darktable.ent">
		%darktable_ent;
]>

<sect2
    version="5.0"
    xmlns="http://docbook.org/ns/docbook" 
    xmlns:xi="http://www.w3.org/2001/XInclude" 
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xml:lang="en"
    status="final"
    xml:id="image_information">

  <title>Image information</title>

  <indexterm>
    <primary>lighttable panels</primary>
    <secondary>image information</secondary>
  </indexterm>

  <indexterm>
    <primary>image information</primary>
  </indexterm>

  <indexterm>
    <primary>Exif data</primary>
  </indexterm>

  <informaltable frame="none">
    <tgroup cols="2" colsep="0" rowsep="0">
      <colspec colwidth="6*"/>
      <colspec colwidth="4*"/>
      <tbody>
        <row>
          <entry>
            This panel shows information embedded within an image's Exif data. When hovering
            with the mouse over thumbnails, darktable will update this view, displaying
            information of the image currently under the mouse cursor. This panel is also
            available in darkroom, tethering, map, and print view.
          </entry>
          <entry>
            <graphic fileref="lighttable/images/panel_metadata.png" scalefit="1" width="80%" align="center" />
          </entry>
        </row>
      </tbody>
    </tgroup>
  </informaltable>

</sect2>
